<h1><strong><a href="{{page.url}}">{{ title }}</a></strong></h1>
<p><small>Publih on <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time> by <a href="{{metadata.author.url}}">{{metadata.author.name}}</a></small></p>
<p>{%- for tag in tags | filterTagList %}
{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a href="{{ tagUrl }}" class="btn btn-light btn-sm me-1">{{ tag }}</a>{%- if not loop.last %} {% endif %}
{%- endfor %}</p>
{{ content | safe }}
{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="row p-3 mt-5">
{%- if previousPost %}<div class="col-6"><a class=""  href="{{ previousPost.url }}">
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-3" viewBox="0 0 16 16">
<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
</svg>
{{ previousPost.data.title }}</a></div>{% endif %}
{%- if nextPost %}<div class="col-6 text-end"><a class="text-end" href="{{ nextPost.url }}">{{ nextPost.data.title }}
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right ms-3" viewBox="0 0 16 16">
<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
</svg>
</a></div>{% endif %}
</div>
{%- endif %}
{%- endif %}